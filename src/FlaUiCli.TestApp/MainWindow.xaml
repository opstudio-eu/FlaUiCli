<Window x:Class="FlaUiCli.TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FlaUI Test Application" 
        Height="600" Width="800"
        AutomationProperties.AutomationId="MainWindow">
    <TabControl AutomationProperties.AutomationId="MainTabControl">
        
        <!-- Basic Controls Tab -->
        <TabItem Header="Basic Controls" AutomationProperties.AutomationId="BasicControlsTab">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                    <GroupBox Header="Buttons" AutomationProperties.AutomationId="ButtonsGroup">
                        <WrapPanel>
                            <Button x:Name="SimpleButton" 
                                    AutomationProperties.AutomationId="SimpleButton"
                                    Content="Click Me" 
                                    Click="SimpleButton_Click"/>
                            <Button x:Name="DisabledButton" 
                                    AutomationProperties.AutomationId="DisabledButton"
                                    Content="Disabled Button" 
                                    IsEnabled="False"/>
                            <ToggleButton x:Name="ToggleBtn" 
                                          AutomationProperties.AutomationId="ToggleButton"
                                          Content="Toggle Me"/>
                        </WrapPanel>
                    </GroupBox>
                    
                    <GroupBox Header="Text Input" AutomationProperties.AutomationId="TextInputGroup" Margin="0,10,0,0">
                        <StackPanel>
                            <Label Content="Name:" AutomationProperties.AutomationId="NameLabel"/>
                            <TextBox x:Name="NameTextBox" 
                                     AutomationProperties.AutomationId="NameTextBox"
                                     Width="300" 
                                     HorizontalAlignment="Left"/>
                            
                            <Label Content="Password:" AutomationProperties.AutomationId="PasswordLabel"/>
                            <PasswordBox x:Name="PasswordBox" 
                                         AutomationProperties.AutomationId="PasswordBox"
                                         Width="300" 
                                         HorizontalAlignment="Left"/>
                            
                            <Label Content="Description:" AutomationProperties.AutomationId="DescriptionLabel"/>
                            <TextBox x:Name="DescriptionTextBox" 
                                     AutomationProperties.AutomationId="DescriptionTextBox"
                                     Width="300" Height="60" 
                                     HorizontalAlignment="Left"
                                     AcceptsReturn="True" 
                                     TextWrapping="Wrap"/>
                        </StackPanel>
                    </GroupBox>
                    
                    <GroupBox Header="Selection Controls" AutomationProperties.AutomationId="SelectionGroup" Margin="0,10,0,0">
                        <StackPanel>
                            <CheckBox x:Name="AgreeCheckBox" 
                                      AutomationProperties.AutomationId="AgreeCheckBox"
                                      Content="I agree to the terms"/>
                            <CheckBox x:Name="SubscribeCheckBox" 
                                      AutomationProperties.AutomationId="SubscribeCheckBox"
                                      Content="Subscribe to newsletter" 
                                      IsChecked="True"/>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                                <RadioButton x:Name="OptionARadio" 
                                             AutomationProperties.AutomationId="OptionARadio"
                                             Content="Option A" 
                                             GroupName="Options" 
                                             IsChecked="True"/>
                                <RadioButton x:Name="OptionBRadio" 
                                             AutomationProperties.AutomationId="OptionBRadio"
                                             Content="Option B" 
                                             GroupName="Options"/>
                                <RadioButton x:Name="OptionCRadio" 
                                             AutomationProperties.AutomationId="OptionCRadio"
                                             Content="Option C" 
                                             GroupName="Options"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>
                    
                    <GroupBox Header="Output" AutomationProperties.AutomationId="OutputGroup" Margin="0,10,0,0">
                        <StackPanel>
                            <Label Content="Click Count:" AutomationProperties.AutomationId="ClickCountLabel"/>
                            <TextBlock x:Name="ClickCountText" 
                                       AutomationProperties.AutomationId="ClickCountText"
                                       Text="0" 
                                       FontSize="24" 
                                       FontWeight="Bold"
                                       Margin="5"/>
                            <Label Content="Status:" AutomationProperties.AutomationId="StatusLabel"/>
                            <TextBlock x:Name="StatusText" 
                                       AutomationProperties.AutomationId="StatusText"
                                       Text="Ready" 
                                       Margin="5"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </ScrollViewer>
        </TabItem>
        
        <!-- List Controls Tab -->
        <TabItem Header="List Controls" AutomationProperties.AutomationId="ListControlsTab">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Label Content="ComboBox:" Grid.Column="0" Grid.Row="0"/>
                <ComboBox x:Name="ColorComboBox" 
                          AutomationProperties.AutomationId="ColorComboBox"
                          Grid.Column="0" Grid.Row="1" 
                          Height="30" 
                          VerticalAlignment="Top">
                    <ComboBoxItem Content="Red" AutomationProperties.AutomationId="RedItem"/>
                    <ComboBoxItem Content="Green" AutomationProperties.AutomationId="GreenItem"/>
                    <ComboBoxItem Content="Blue" AutomationProperties.AutomationId="BlueItem"/>
                    <ComboBoxItem Content="Yellow" AutomationProperties.AutomationId="YellowItem"/>
                    <ComboBoxItem Content="Purple" AutomationProperties.AutomationId="PurpleItem"/>
                </ComboBox>
                
                <Label Content="ListBox:" Grid.Column="1" Grid.Row="0"/>
                <ListBox x:Name="FruitListBox" 
                         AutomationProperties.AutomationId="FruitListBox"
                         Grid.Column="1" Grid.Row="1"
                         SelectionMode="Extended">
                    <ListBoxItem Content="Apple" AutomationProperties.AutomationId="AppleItem"/>
                    <ListBoxItem Content="Banana" AutomationProperties.AutomationId="BananaItem"/>
                    <ListBoxItem Content="Cherry" AutomationProperties.AutomationId="CherryItem"/>
                    <ListBoxItem Content="Date" AutomationProperties.AutomationId="DateItem"/>
                    <ListBoxItem Content="Elderberry" AutomationProperties.AutomationId="ElderberryItem"/>
                </ListBox>
                
                <Label Content="DataGrid:" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2"/>
                <DataGrid x:Name="PeopleDataGrid" 
                          AutomationProperties.AutomationId="PeopleDataGrid"
                          Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Age" Binding="{Binding Age}" Width="60"/>
                        <DataGridTextColumn Header="City" Binding="{Binding City}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </TabItem>
        
        <!-- TreeView Tab -->
        <TabItem Header="TreeView" AutomationProperties.AutomationId="TreeViewTab">
            <Grid Margin="10">
                <TreeView x:Name="FileTreeView" AutomationProperties.AutomationId="FileTreeView">
                    <TreeViewItem Header="Documents" AutomationProperties.AutomationId="DocumentsNode" IsExpanded="True">
                        <TreeViewItem Header="Work" AutomationProperties.AutomationId="WorkNode">
                            <TreeViewItem Header="Report.docx" AutomationProperties.AutomationId="ReportNode"/>
                            <TreeViewItem Header="Presentation.pptx" AutomationProperties.AutomationId="PresentationNode"/>
                        </TreeViewItem>
                        <TreeViewItem Header="Personal" AutomationProperties.AutomationId="PersonalNode">
                            <TreeViewItem Header="Photo.jpg" AutomationProperties.AutomationId="PhotoNode"/>
                            <TreeViewItem Header="Music.mp3" AutomationProperties.AutomationId="MusicNode"/>
                        </TreeViewItem>
                    </TreeViewItem>
                    <TreeViewItem Header="Downloads" AutomationProperties.AutomationId="DownloadsNode">
                        <TreeViewItem Header="Software.exe" AutomationProperties.AutomationId="SoftwareNode"/>
                        <TreeViewItem Header="Movie.mkv" AutomationProperties.AutomationId="MovieNode"/>
                    </TreeViewItem>
                </TreeView>
            </Grid>
        </TabItem>
        
        <!-- Sliders and Progress Tab -->
        <TabItem Header="Sliders &amp; Progress" AutomationProperties.AutomationId="SlidersTab">
            <StackPanel Margin="10">
                <GroupBox Header="Slider" AutomationProperties.AutomationId="SliderGroup">
                    <StackPanel>
                        <Slider x:Name="VolumeSlider" 
                                AutomationProperties.AutomationId="VolumeSlider"
                                Minimum="0" Maximum="100" Value="50"
                                Width="300" HorizontalAlignment="Left"
                                TickFrequency="10" TickPlacement="BottomRight"/>
                        <TextBlock x:Name="VolumeValue" 
                                   AutomationProperties.AutomationId="VolumeValue"
                                   Text="{Binding ElementName=VolumeSlider, Path=Value, StringFormat='Volume: {0:F0}'}"
                                   Margin="5"/>
                    </StackPanel>
                </GroupBox>
                
                <GroupBox Header="Progress Bar" AutomationProperties.AutomationId="ProgressGroup" Margin="0,10,0,0">
                    <StackPanel>
                        <ProgressBar x:Name="TaskProgress" 
                                     AutomationProperties.AutomationId="TaskProgress"
                                     Value="35" Minimum="0" Maximum="100"
                                     Height="25" Width="300" HorizontalAlignment="Left"/>
                        <Button x:Name="IncreaseProgressBtn" 
                                AutomationProperties.AutomationId="IncreaseProgressBtn"
                                Content="Increase Progress" 
                                Click="IncreaseProgress_Click"
                                Margin="0,10,0,0"/>
                    </StackPanel>
                </GroupBox>
                
                <GroupBox Header="Expander" AutomationProperties.AutomationId="ExpanderGroup" Margin="0,10,0,0">
                    <Expander x:Name="DetailsExpander" 
                              AutomationProperties.AutomationId="DetailsExpander"
                              Header="Click to expand details">
                        <TextBlock Text="This is the hidden content that appears when you expand this control. It can contain any WPF elements."
                                   TextWrapping="Wrap" 
                                   Margin="10"/>
                    </Expander>
                </GroupBox>
            </StackPanel>
        </TabItem>
        
        <!-- Menu and Dialogs Tab -->
        <TabItem Header="Dialogs" AutomationProperties.AutomationId="DialogsTab">
            <StackPanel Margin="10">
                <GroupBox Header="Dialog Actions" AutomationProperties.AutomationId="DialogActionsGroup">
                    <WrapPanel>
                        <Button x:Name="ShowMessageBtn" 
                                AutomationProperties.AutomationId="ShowMessageBtn"
                                Content="Show Message Box" 
                                Click="ShowMessage_Click"/>
                        <Button x:Name="ShowInputDialogBtn" 
                                AutomationProperties.AutomationId="ShowInputDialogBtn"
                                Content="Show Input Dialog" 
                                Click="ShowInputDialog_Click"/>
                    </WrapPanel>
                </GroupBox>
                
                <GroupBox Header="Context Menu Test" AutomationProperties.AutomationId="ContextMenuGroup" Margin="0,10,0,0">
                    <Border Background="LightGray" Height="100" Margin="5">
                        <TextBlock Text="Right-click here to see context menu" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Center"
                                   AutomationProperties.AutomationId="ContextMenuTarget">
                            <TextBlock.ContextMenu>
                                <ContextMenu AutomationProperties.AutomationId="TestContextMenu">
                                    <MenuItem Header="Cut" AutomationProperties.AutomationId="CutMenuItem"/>
                                    <MenuItem Header="Copy" AutomationProperties.AutomationId="CopyMenuItem"/>
                                    <MenuItem Header="Paste" AutomationProperties.AutomationId="PasteMenuItem"/>
                                    <Separator/>
                                    <MenuItem Header="Properties" AutomationProperties.AutomationId="PropertiesMenuItem"/>
                                </ContextMenu>
                            </TextBlock.ContextMenu>
                        </TextBlock>
                    </Border>
                </GroupBox>
            </StackPanel>
        </TabItem>
    </TabControl>
</Window>
